{% extends 'StemsPageBundle:Layout:' ~ page.layout.slug ~ '.html.twig' %}

{% import 'StemsSocialBundle:Macro:share.html.twig' as share %}

{% block twitterCard %}
	<meta name="twitter:card" content="photo">
	<meta name="twitter:url" content="{{ app.request.uri }}">
	<meta name="twitter:description" content="{{ post.excerpt }}">
	<meta name="twitter:image" content="{{ getMediaImage(post.image).src|imagine_filter('page_banner') }}">
	<meta name="twitter:site" content="@threadandmirror">
	<meta name="twitter:creator" content="@threadandmirror">
	<meta name="twitter:title" content="{{ post.title ~ ' - ' ~ post.subtitle }}">
	<meta name="twitter:domain" content="http://www.threadandmirror.com">
{% endblock %}

{% block breadcrumbs %}<a href="{{ path('thread_editorspicks_front_post', { 'slug' : post.slug }) }}">Editor's Picks: {{ post.title ~ ' - ' ~ post.subtitle }}</a>{% endblock %}

{% block banner %}
	<div class="magazine-layout-inset__banner" style="background-image:url('{{ getMediaImage(post.image).src|imagine_filter('page_banner') }}');background-size:cover;background-position:center;"></div>
	<div class="magazine-layout-inset__header-inset text-center">
		<div class="magazine-layout-inset__thumbnail" style="background-image:url('{{ getMediaImage(post.image).src|imagine_filter('page_banner') }}');background-size:cover;background-position:center;"></div>
        <div class="magazine-layout-inset__social">
            {{ share.shareGoogleplus(post.sharer('googleplus')) }}
            {{ share.sharePinterest(post.sharer('pinterest')) }}
            {{ share.shareTwitter(post.sharer('twitter')) }}
            {{ share.shareFacebook(post.sharer('facebook')) }}
        </div>
		<p class="magazine-layout-inset__date">{{ post.published|date('jS F Y') }}</p>
        <p class="magazine-layout-inset__accreditation">{{ getMediaImage(post.image).accreditation }}</p>
		{% block title %}<h1 class="magazine-layout-inset__title">{{ post.title }}<span class="magazine-layout-inset__subtitle">{{ post.subtitle }}</span></h1>{% endblock %}
		<hr class="magazine-layout-inset__hr">
		{% block content %}
			{% if post.excerpt is not empty %}<p class="magazine-layout-inset__caption">{{ post.excerpt }}</p>{% endif %}
		{% endblock %}
	</div>
{% endblock %}

{% block dynamic %}
	<article class="magazine-layout-inset__article" itemscope itemtype="http://schema.org/Article">
        <div class="magazine-layout-inset__article-wrapper col-{{ post.span }}" style="height:{{ post.height }}px">
            {% if post.content is not empty %}
                {{ post.content|raw }}
            {% endif %}
            {% for section in sections %}
                {{ section|raw }}
            {% endfor %}
        </div>
