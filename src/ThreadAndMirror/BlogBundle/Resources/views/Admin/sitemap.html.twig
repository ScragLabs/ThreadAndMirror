	{# The blog articles #}
	{% for post in posts %}
		<url>
			<loc>{{ site_url }}/{{ slug }}/{{ post.slug }}</loc>
			<changefreq>monthly</changefreq>
			<lastmod>{{ post.published|date('Y-m-d') }}</lastmod>
		</url>
	{% endfor %}
{% endspaceless %}