{% extends 'StemsPageBundle:Layout:' ~ page.layout.slug ~ '.html.twig' %}

{% import 'StemsCoreBundle:Macro:core.html.twig' as macros %}

{% block dynamic %}
	<div class="social-controls">
		{# <p></p> #}
		<br class="clear">
	</div>
	<div class="social-feed">
		{% for post in posts %}
			{% embed 'ThreadAndMirrorSocialBundle:Embed:post.html.twig' %}{% endembed %}
		{% endfor %}
		<br class="clear">
	</div>
	{% if posts|length == 50 %}
		<div class="rest-load-more" data-offset="50" data-url="/rest/social/get-more-favourite-posts/"></div>
	{% endif %}
{% endblock %}