<!DOCTYPE XHTML 1.0 Transitional>
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
	{# Metadata #}
		<title>{% if page.windowTitle is not empty %}{% block windowTitle %}Home{% endblock %} &middot; {% endif %}Thread &amp; Mirror &middot; Fashion, Beauty, Blog, Street Chic, The Social Circle and Sale Alerts.</title>
		<meta http-equiv="Content-Type"  content="text/html;charset=UTF-8" />
		{% if page.noIndex %}<meta name="robots" content="noindex" />{% endif %}
		<meta name="p:domain_verify" content="365a3fd68ee25f112944be3892208ba0"/>
		<meta name="google-site-verification" content="dXihq8Jt3LO5JRItWHODoHiMBlNSv4QhqsSpOtGZIZ4" />
		<meta name="keywords" content="{% if page.metaKeywords is not empty %}{{ page.metaKeywords }}{% else %}{{ stems_site_keywords }}{% endif %}">
		<meta name="description" content="{% if page.metaDescription is not empty %}{{ page.metaDescription }}{% else %}{{ stems_site_description }}{% endif %}">
	{# Sharing metadata #}
		{% block twitterCard %}
			<meta name="twitter:card" content="photo">
			<meta name="twitter:url" content="{{ app.request.uri }}">
			<meta name="twitter:title" content="Thread & Mirror">
			<meta name="twitter:description" content="{% if page.metaDescription is not empty %}{{ page.metaDescription }}{% else %}Fashion, Beauty, Street Chic, Style Exchange and Sale Alerts.{% endif %}">
			<meta name="twitter:image" content="http://www.threadandmirror.com/media/image/original/london-skyline.jpg">
			<meta name="twitter:site" content="@threadandmirror">
			<meta name="twitter:creator" content="@threadandmirror">
			<meta name="twitter:domain" content="http://www.threadandmirror.com">
		{% endblock %}
	{# Fonts and styles #}
		<script type="text/javascript" src="http://fast.fonts.net/jsapi/5d90cee9-3c49-45f3-ab44-db38581300cd.js"></script>
		<link rel="stylesheet" href="/css/font-awesome.min.css">
		{% stylesheets '@frontend_css' filter="cssrewrite" filter="uglifycss" output='css/frontend.css' %}<link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}
		{% block stylesheets %}{% endblock %}
	{# Icons #}
	   	<link rel="icon" href="/favicon.png?nocache=070514" type="image/x-icon" />
	{# Other Shit #}
		{# Analytics #}
		{% if page.disableAnalytics == false and app.environment == 'prod' %}
			<script>
			  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			  ga('create', 'UA-48018519-1', 'threadandmirror.com');
			  ga('send', 'pageview');

			</script>
		{% endif %}
		{# WebGains Affiliate Code #}
		<!-- WGCC163 --> 
	</head>
	<body class="{% if app.user %}logged-in{% else %}not-logged-in{% endif %}" data-cms-slug="{{ page.slug }}">
		<header>
			<h2><a href="/">THREAD<span>&amp;</span>MIRROR</a></h2>

			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<a class="login" href="/logout" title="Sign Out"><i class="fa fa-key"></i></a>
			{% else %}
				<a class="login" href="/login" title="Sign In"><i class="fa fa-key"></i></a>
			{% endif %}
			<nav>
				{{ render(controller('ThreadAndMirrorProductsBundle:Front:menu', {'page' : page })) }}
			</nav>
			<a id="back-to-top" title="Back To The Top"><i class="fa fa-angle-double-up"></i></a>
		</header>
		<div id="flash-messages">
			<div class="wrap">
				{% for flashMessage in app.session.flashbag.get('error') %}
		            <div class="flash flash-error">
		                <p>{{ flashMessage }}</p>
		                <i class="fa close">&times;</i>
		            </div>
		        {% endfor %}
		        {% for flashMessage in app.session.flashbag.get('warning') %}
		            <div class="flash flash-warning">
		                <p>{{ flashMessage }}</p>
		                <i class="fa close">&times;</i>
		            </div>
		        {% endfor %}
		        {% for flashMessage in app.session.flashbag.get('success') %}
		            <div class="flash flash-success">
		                <p>{{ flashMessage }}</p>
		                <i class="fa close">&times;</i>
		            </div>
		        {% endfor %}
		        {% for flashMessage in app.session.flashbag.get('debug') %}
		            <div class="flash flash-debug">
		                <p>{{ flashMessage }}</p>
		                <i class="fa close">&times;</i>
		            </div>
		        {% endfor %}
		    </div>
		</div>
