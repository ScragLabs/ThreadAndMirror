<!DOCTYPE XHTML 1.0 Transitional>
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
	{# Metadata #}
		<title>{% block windowTitle %}{% if page.windowTitle is not empty %}{{ page.windowTitle }}{% else %}Home{% endif %}{% endblock %} &middot; Thread &amp; Mirror &middot; Fashion, Beauty, Blog, Street Chic, The Social Circle and Sale Alerts.</title>
		<meta http-equiv="Content-Type"  content="text/html;charset=UTF-8" />
        {% block metaNoIndex %}{% if page is defined %}{% if page.noIndex %}<meta name="robots" content="noindex" />{% endif %}{% endif %}{% endblock %}
		<meta name="p:domain_verify" content="365a3fd68ee25f112944be3892208ba0"/>
		<meta name="google-site-verification" content="dXihq8Jt3LO5JRItWHODoHiMBlNSv4QhqsSpOtGZIZ4" />
		<meta name="keywords" content="{% block metaKeywords %}{% if page.metaKeywords is not empty %}{{ page.metaKeywords }}{% else %}{{ stems_site_keywords }}{% endif %}{% endblock %}">
		<meta name="description" content="{% block metaDescription %}{% if page.metaDescription is not empty %}{{ page.metaDescription }}{% else %}{{ stems_site_description }}{% endif %}{% endblock %}">
	{# Sharing metadata #}
		{% block twitterCard %}
			<meta name="twitter:card" content="photo">
			<meta name="twitter:url" content="{{ app.request.uri }}">
			<meta name="twitter:title" content="Thread & Mirror">
			<meta name="twitter:description" content="{% block twitterCardDescription %}{% if page.metaDescription is not empty %}{{ page.metaDescription }}{% else %}Fashion, Beauty, Street Chic, Style Exchange and Sale Alerts.{% endif %}{% endblock %}">
			<meta name="twitter:image" content="{% block twitterCardImage %}http://www.threadandmirror.com/media/image/original/london-skyline.jpg{% endblock %}">
			<meta name="twitter:site" content="@threadandmirror">
			<meta name="twitter:creator" content="@threadandmirror">
			<meta name="twitter:domain" content="http://www.threadandmirror.com">
		{% endblock %}
	{# Fonts and styles #}
        <link rel="stylesheet" href="/fonts/fonts.css">
		<link rel="stylesheet" href="/css/font-awesome.min.css?nocache=250116">
		{% stylesheets '@frontend_css' filter="cssrewrite" filter="uglifycss" output='css/frontend.css' %}<link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}
		{% block stylesheets %}{% endblock %}
	{# Icons #}
	   	<link rel="icon" href="/favicon.png?nocache=070514" type="image/x-icon" />
	{# Other Shit #}
		{# Analytics #}
		{% if app.environment == 'prod' %}
			<script>
			  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
